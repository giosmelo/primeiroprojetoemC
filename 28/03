programa {
  funcao inicio() {
    inteiro idade, nascimento

    escreva("digite o ano de nascimento: ")
   leia (nascimento)

   idade = 2023-nascimento

   escreva("\nsua idade é: ", idade)

   se (idade >= 18){
    escreva("\nvocê é maior de dezoito.")
   }senao{
    escreva("\nvocê é menor que dezoito.")
  }
}




