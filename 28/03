programa {
  funcao inicio() {
    inteiro idadeatual, nascimento, subtracao

    escreva ("ola! qual a sua idade?")
    escreva ("\ndigite sua idade: ")
    leia(idadeatual)
    escreva ("em que ano você nasceu?")
    escreva("\ndigite o ano:")
    leia (nascimento)

    subtracao = idadeatual - nascimento
     
   se (subtracao <= 1999) {
    escreva ("acesso permitido, você é maior de idade.")
   }senao{
    escreva("acesso negado, você é menor de idade.")
   }
  }
